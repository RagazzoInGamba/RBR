# ========================================
# Oracle Red Bull Racing - Meal Booking Platform
# Environment Variables Template
# ========================================

# ----------------------------------------
# Application
# ----------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
LOG_LEVEL=debug

# ----------------------------------------
# Database (PostgreSQL)
# ----------------------------------------
DATABASE_URL=postgresql://rbr_user:rbr_password@localhost:5434/rbr_meals

# ----------------------------------------
# Redis Cache
# ----------------------------------------
REDIS_URL=redis://localhost:6381
REDIS_PASSWORD=
REDIS_TTL=3600

# ----------------------------------------
# NextAuth v5 Authentication
# ----------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-jwt-key-change-this-in-production

# Generate a new secret with:
# openssl rand -base64 32

# ----------------------------------------
# MinIO S3-Compatible Storage
# ----------------------------------------
MINIO_ENDPOINT=localhost:9004
MINIO_ACCESS_KEY=rbr_admin
MINIO_SECRET_KEY=rbr_admin_2024
MINIO_BUCKET=rbr-meals
MINIO_USE_SSL=false
MINIO_PORT=9004

# ----------------------------------------
# Email Service (Optional - SendGrid, AWS SES, etc.)
# ----------------------------------------
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-password
# SMTP_FROM=noreply@redbullracing.com

# ----------------------------------------
# Payment Gateways
# ----------------------------------------

# NEXY Payment Gateway
# NEXY_API_KEY=your-nexy-api-key
# NEXY_MERCHANT_ID=your-merchant-id
# NEXY_WEBHOOK_SECRET=your-webhook-secret
# NEXY_ENVIRONMENT=sandbox # sandbox | production

# Satispay Payment Gateway
# SATISPAY_API_KEY=your-satispay-api-key
# SATISPAY_KEY_ID=your-key-id
# SATISPAY_ENVIRONMENT=staging # staging | production

# ----------------------------------------
# Monitoring & Analytics (Optional)
# ----------------------------------------
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=development
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ----------------------------------------
# Feature Flags (Optional)
# ----------------------------------------
# NEXT_PUBLIC_ENABLE_PAYMENT=false
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false
# NEXT_PUBLIC_ENABLE_BOOKING=true

# ----------------------------------------
# API Rate Limiting
# ----------------------------------------
# RATE_LIMIT_MAX=100
# RATE_LIMIT_WINDOW_MS=900000

# ----------------------------------------
# Development Tools
# ----------------------------------------
# Enable detailed logging in development
# DEBUG=true
# NEXT_TELEMETRY_DISABLED=1
